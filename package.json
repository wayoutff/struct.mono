{
  "name": "struct.mono",
  "description": "Struct monorepository",
  "private": true,
  "workspaces": [
    "packages/*",
    "instances/*"
  ],
  "scripts": {
    "clean": "pnpm run -r clean",
    "web:build": "pnpm run -r web:build",
    "web:start": "pnpm run -r web:start",
    "web:build:dev": "pnpm run -r web:build:dev",
    "server": "pnpm run -r server",
    "test": "pnpm run -r test",
    "lint": "eslint --ext js,ts,tsx .",
    "build": "pnpm run -r build && pnpm run after:node",
    "after:node": "node ./instances/app/dist/bundle.js"
  },
  "devDependencies": {
    "eslint": "8.51.0",
    "eslint-plugin-import": "2.28.0",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.10.0"
  }
}
